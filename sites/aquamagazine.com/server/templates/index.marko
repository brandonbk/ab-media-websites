import { get } from "@parameter1/base-cms-object-path";

$ const { id, alias, name, pageNode } = input;

$ const { site } = out.global;

<global-website-section-home-layout
  id=id
  alias=alias
  name=name
  page-node=pageNode
>
  <!-- <@head>
    <meta name="google-site-verification" content="NOT_SET" />
  </@head> -->

  <@section|{ aliases }|>
    <theme-gam-define-display-ad
      name="inline-leaderboard-mobile"
      position="section_page"
      aliases=input.aliases
      modifiers=["leaderboard-mobile", "inter-block", "section_page"]
    />
  </@section>

  <@section|{ aliases }| modifiers=["break-container"]>
    <theme-opinion-block alias="news" />
  </@section>

  <@section>
    <theme-section-list-deck-block aliases=["retail", "service", "builder"] />
  </@section>

  $ const publicationIds = site.get("magazine.publicationIds");
  <if(publicationIds.length)>
    <@section>
      <theme-magazine-issues-block publication-id=publicationIds[0] />
    </@section>
  </if>

  <@section>
    <theme-section-card-list-block alias="homeowners-diy" />
  </@section>

  <@section>
    <theme-products-block alias="products" />
  </@section>

  <@section|{ aliases }|>
    <theme-gam-define-display-ad
      name="rotation"
      position="section_page"
      aliases=input.aliases
      modifiers=["rotation", "inter-block", "section_page"]
    />
  </@section>

  <if(site.get("leaders.enabled"))>
    <@section>
      <global-leaders-home-page />
    </@section>
  </if>

  <@section>
    <site-promo-card-rotation-block />
  </@section>

  <@section>
    <div role="region" aria-label="Most Popular Stories">
      <theme-client-side-most-popular-block />
    </div>
  </@section>

  <!-- <@section>
    <theme-section-card-deck-block alias="builder/pools" default-description="" />
  </@section> -->

  <!-- <@section>
    <theme-resource-library-block alias="resource-library" />
  </@section> -->
</global-website-section-home-layout>
